# API Configuration
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_BASE_URL=http://localhost:3000

# Application Configuration
REACT_APP_NAME=EduConnect
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Plateforme de connexion entre étudiants et établissements d'enseignement supérieur

# Environment
NODE_ENV=development

# Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_HOTJAR_ID=

# Social Media (Optional)
REACT_APP_FACEBOOK_APP_ID=
REACT_APP_TWITTER_HANDLE=@educonnect

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Features Flags
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_CHAT=true

# Debug
REACT_APP_DEBUG=false
GENERATE_SOURCEMAP=true
